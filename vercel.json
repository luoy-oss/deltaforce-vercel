{
  "version": 2,
  "functions": {
    "api/*.php": {
      "runtime": "vercel-php@0.7.3"
    },
    "think": {
      "runtime": "vercel-php@0.7.3"
    }
  },
  "routes": [
    {
      "src": "/think/(.*)",
      "dest": "think"
    },
    {
      "src": "/(.*)",
      "dest": "api/index.php"
    }
  ]
}